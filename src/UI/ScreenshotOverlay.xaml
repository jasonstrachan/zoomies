<Window x:Class="Zoomies.UI.ScreenshotOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoomies Screenshot"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        Cursor="Cross"
        Visibility="Hidden">
    
    <Grid>
        <!-- Main container with clipping to prevent overflow -->
        <Grid ClipToBounds="True">
            <!-- Screenshot image with transforms -->
            <Image x:Name="ScreenshotImage" 
                   Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   RenderOptions.BitmapScalingMode="HighQuality">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="PanTransform" X="0" Y="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Grid>
        
        <!-- Zoom indicator overlay -->
        <Border HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20"
                Background="#CC000000"
                CornerRadius="5"
                Padding="10,5">
            <TextBlock x:Name="ZoomText" 
                       Text="100%" 
                       Foreground="White" 
                       FontSize="16"
                       FontWeight="Bold"/>
        </Border>
        
        <!-- Instructions overlay -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="20"
                Background="#CC000000"
                CornerRadius="5"
                Padding="15,8">
            <TextBlock Text="Scroll to zoom â€¢ Release Ctrl+Alt to exit" 
                       Foreground="White" 
                       FontSize="14"/>
        </Border>
    </Grid>
</Window>