<Window x:Class="Zoomies.UI.MagnifierOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Magnifier"
        Width="250"
        Height="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        IsHitTestVisible="False"
        Visibility="Hidden">
    
    <Grid>
        <Border BorderBrush="#40000000" 
                BorderThickness="2" 
                CornerRadius="100">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="315"
                                  ShadowDepth="5"
                                  Opacity="0.5"
                                  BlurRadius="10"/>
            </Border.Effect>
            
            <Grid>
                <Ellipse Fill="Black"/>
                <Image x:Name="MagnifiedImage" 
                       Stretch="Fill"
                       RenderOptions.BitmapScalingMode="NearestNeighbor">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="123" 
                                         RadiusY="123" 
                                         Center="125,125"/>
                    </Image.Clip>
                </Image>
                
                <!-- Crosshair -->
                <Canvas>
                    <Line X1="125" Y1="115" X2="125" Y2="135" 
                          Stroke="Red" StrokeThickness="1" Opacity="0.7"/>
                    <Line X1="115" Y1="125" X2="135" Y2="125" 
                          Stroke="Red" StrokeThickness="1" Opacity="0.7"/>
                    
                    <!-- Zoom indicator -->
                    <TextBlock x:Name="ZoomText" 
                               Text="2.0x" 
                               Foreground="White" 
                               FontSize="12"
                               Canvas.Left="10" 
                               Canvas.Top="10">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="1" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</Window>