<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <ApplicationIcon>assets/images/thumb2.ico</ApplicationIcon>
    <AssemblyName>Zoomies</AssemblyName>
    <RootNamespace>Zoomies</RootNamespace>
    <!-- Publishing settings - only used during publish, not run -->
    <PublishSingleFile Condition="'$(Configuration)' == 'Release'">true</PublishSingleFile>
    <SelfContained Condition="'$(Configuration)' == 'Release'">false</SelfContained>
    <PublishReadyToRun Condition="'$(Configuration)' == 'Release'">true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="assets\images\thumb.png" />
    <Resource Include="assets\images\thumb2.ico" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="src\Core\ScreenCapture\" />
    <Folder Include="src\Core\Input\" />
    <Folder Include="src\Core\Magnification\" />
    <Folder Include="src\UI\" />
    <Folder Include="src\Native\" />
    <Folder Include="src\Utils\" />
    <Folder Include="Resources\" />
  </ItemGroup>

</Project>