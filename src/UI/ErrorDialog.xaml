<Window x:Class="Zoomies.UI.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoomies Error" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Error title -->
        <TextBlock Grid.Row="0" 
                   Text="An error occurred:" 
                   FontWeight="Bold" 
                   FontSize="14" 
                   Margin="0,0,0,10"/>

        <!-- Error details in scrollable, selectable TextBox -->
        <TextBox Grid.Row="1" 
                 x:Name="ErrorTextBox"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Background="#F5F5F5"
                 BorderBrush="#CCCCCC"
                 Padding="5"
                 Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Copy to Clipboard" 
                    Click="OnCopyClick" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="Close" 
                    Click="OnCloseClick" 
                    Width="80" 
                    Height="30" 
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>